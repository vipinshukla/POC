<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qg_status_bar_carousel_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/qg_carousel_0"
                android:layout_width="192dp"
                android:layout_height="192dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="top|left"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:background="@drawable/right_border"
                android:paddingRight="2dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/qg_carousel_1"
                android:layout_width="192dp"
                android:layout_height="192dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="top|right"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:background="@drawable/left_border"
                android:paddingLeft="2dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/imagepanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/qg_carousel_0_center_croped"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="top|left"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:background="@drawable/right_border"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/qg_carousel_1_center_croped"
                android:layout_width="wrap_content"
                android:layout_height="192dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="top|right"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:background="@drawable/left_border"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qg_line0"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="192dp"
            android:background="@drawable/right_border"
            android:minHeight="64dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qg_title0"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/top_border"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:paddingTop="8dp"
                android:singleLine="true"
                android:text="Title"
                android:textColor="#de000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/qg_message0"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:text="This is second text"
                android:textColor="#66000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qg_line0_with_title_only"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="192dp"
            android:background="@drawable/right_border"
            android:minHeight="64dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qg_title0_only"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/top_border"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:maxLines="2"
                android:paddingTop="8dp"
                android:text="This is new text"
                android:textColor="#de000000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qg_line0_with_message_only"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="192dp"
            android:background="@drawable/right_border"
            android:minHeight="64dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qg_message0_only"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/top_border"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:maxLines="2"
                android:paddingTop="8dp"
                android:text="this is text"
                android:textColor="#66000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qg_line1"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="197dp"
            android:layout_marginTop="192dp"
            android:background="@drawable/left_border"
            android:minHeight="64dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qg_title1"
                android:text="title"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/top_border"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:paddingTop="8dp"
                android:singleLine="true"
                android:textColor="#de000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/qg_message1"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:text="this is second text"
                android:textColor="#66000000"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qg_line1_with_title_only"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="197dp"
            android:layout_marginTop="192dp"
            android:background="@drawable/left_border"
            android:minHeight="64dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qg_title1_only"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/top_border"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:maxLines="2"
                android:paddingTop="8dp"
                android:text=""
                android:textColor="#de000000"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qg_line1_with_message_only"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="197dp"
            android:layout_marginTop="192dp"
            android:background="@drawable/left_border"
            android:minHeight="64dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qg_message1_only"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/top_border"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:maxLines="2"
                android:paddingTop="8dp"
                android:text="This is text"
                android:textColor="#66000000"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/qg_carousel_v2_app_icon_container"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/qg_carousel_v2_app_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/pinofi_logo" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/qg_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/qg_next_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/pinofi_logo" />

        <ImageButton
            android:id="@+id/qg_prev_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="left"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/pinofi_logo" />
    </FrameLayout>
</FrameLayout><!-- From: file:/data/qgraph/mobile/Module_Develop/QG/src/main/res/layout/qg_carousel_v2.xml -->