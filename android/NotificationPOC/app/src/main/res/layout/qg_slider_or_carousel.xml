<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/qg_status_bar_slider_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/qg_slider_or_carousel_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="64dp">

        <LinearLayout
            android:id="@+id/qg_carousel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/qg_carousel_0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="192dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:background="#ffffffff"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/qg_carousel_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="192dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:background="#ffffffff"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qg_carousel_center_croped"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:weightSum="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/qg_carousel_0_center_croped"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="192dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:background="#ffffffff"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/qg_carousel_1_center_croped"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="192dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:background="#ffffffff"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <ImageView
            android:id="@+id/qg_slider"
            android:src="@drawable/pinofi_logo"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:layout_gravity="bottom"
            android:scaleType="fitCenter" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/qg_notification_image_full_content_view"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/qg_slider_or_carousel_app_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/pinofi_logo"
            android:padding="12dp"
            android:scaleType="centerInside" />

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:layout_marginStart="64dp"
            android:minHeight="64dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qg_title"
                android:text="Hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:textColor="#de000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/qg_message"
                android:text="hello"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:maxLines="2"
                android:textColor="#66000000"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/qg_next_button"
            android:layout_width="32dp"
            android:src="@drawable/pinofi_logo"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/qg_prev_button"
            android:layout_width="32dp"
            android:src="@drawable/pinofi_logo"
            android:layout_height="32dp"
            android:layout_gravity="left"
            android:background="@android:color/transparent"
            android:scaleType="fitXY" />
    </FrameLayout>
</FrameLayout><!-- From: file:/data/qgraph/mobile/Module_Develop/QG/src/main/res/layout/qg_slider_or_carousel.xml -->